@model IEnumerable<Company>
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<table class="table table-striped table-dark">
    <tr>
        <th>Name</th>
        <th>Products In Stock</th>
        <th>Logo</th>
        <th>Total Sales</th>
    </tr>

    @foreach(var company in @Model)
    {
        <tr>
            <td>@company.Name</td>
            <td>@company.ProductsInStock</td>
            <td> <img style="width: 200px;" src="@company.Logo"> </td>
            <td>@company.TotalSales</td>
            <td><a href="@Url.Action("Update", "Company", new {companyId = @company.ID})" class="btn btn-primary"> Update </a></td>
            <td><a href="@Url.Action("Delete", "Company", new {companyId = @company.ID})" class="btn btn-danger"> Delete </a></td>

        </tr>
    }

</table>