@model Transaction
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<div class="container shadow p-3 mb-5 bg-white rounded">
    <form asp-controller="Transaction" asp-action="Create" enctype="multipart/form-data">

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputPassword4">Phone Number</label>
                <input type="text" class="form-control" placeholder="Phone Number" asp-for="PhoneNumber">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">First Name</label>
                <input type="text" class="form-control" placeholder="First Name" asp-for="FirstName">
            </div>
        </div>
        <div class="form-group">
            <label for="inputAddress2">Last Name</label>
            <input type="text" class="form-control" placeholder="Last Name" asp-for="LastName">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Email</label>
            <input type="text" class="form-control" placeholder="Email" asp-for="Email" multiple>
        </div>
        <div class="form-group">
            <label for="inputEmail4">Payment Type</label>
            <input type="text" class="form-control" placeholder="Payment Type" asp-for="PaymentType">
        </div>
        <div class="form-group">
            <label for="inputAddress2">Coupon</label>
            <textarea type="text" class="form-control" placeholder="Coupon Code" asp-for="CouponCode"></textarea>
        </div>
        <div class="form-group">
            <label for="inputAddress2">Address</label>
            <textarea type="text" class="form-control" placeholder="Address" asp-for="Address"></textarea>
        </div>
        <div class="form-group">
            <label for="inputAddress2">City</label>
            <textarea type="text" class="form-control" placeholder="City" asp-for="City"></textarea>
        </div>
        <div class="form-group">
            <label for="inputAddress2">State</label>
            <textarea type="text" class="form-control" placeholder="State" asp-for="State"></textarea>
        </div>
        <div class="form-group">
            <label for="inputAddress2">Zip</label>
            <textarea type="text" class="form-control" placeholder="Zip" asp-for="Zip"></textarea>
        </div>
        <div class="create-button-container">
            <button type="submit" class="btn btn-success create-button" style="font-size: 24px;">Add Transaction</button>
        </div>
    </form>
</div>
