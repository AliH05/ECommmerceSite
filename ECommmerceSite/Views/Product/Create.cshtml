@model Product
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
    <div class="container shadow p-3 mb-5 bg-white rounded">
        <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Product Name</label>
                    <input type="text" class="form-control" placeholder="Name" asp-for="Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Stock</label>
                    <input type="text" class="form-control" placeholder="Stock" asp-for="Stock">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress2">Price</label>
                <input type="text" class="form-control" placeholder="Price" asp-for="Price">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Image</label>
                <input type="text" class="form-control" placeholder="Image" asp-for="Image" multiple>
            </div>
            <div class="form-group">
                <label for="inputEmail4">Release Date</label>
                <input type="text" class="form-control" placeholder="Release Date" asp-for="ReleaseDate">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Description</label>
                <textarea type="text" class="form-control" placeholder="Description" asp-for="Description"></textarea>
            </div>
            <div class="create-button-container">
                <button type="submit" class="btn btn-success create-button" style="font-size: 24px;">Add Product</button>
            </div>
        </form>
    </div>
