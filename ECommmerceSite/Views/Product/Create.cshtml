@model ProductCreateViewModel
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />
<link href="~/css/product-create.css" rel="stylesheet" />
    <div class="container shadow p-3 mb-5 bg-white rounded">
        <form asp-controller="Product" asp-action="Create" enctype="multipart/form-data">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputEmail4">Product Name</label>
                    <input type="text" class="form-control" placeholder="Name" asp-for="Product.Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputPassword4">Stock</label>
                <input type="text" class="form-control" placeholder="Stock" asp-for="Product.Stock">
                </div>
            </div>
            <div class="form-group">
                <label for="inputAddress2">Price</label>
            <input type="text" class="form-control" placeholder="Price" asp-for="Product.Price">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Image</label>
            <input type="text" class="form-control" placeholder="Image" asp-for="Product.Image" multiple>
            </div>
            <div class="form-group">
                <label for="inputEmail4">Release Date</label>
            <input type="text" class="form-control" placeholder="Release Date" asp-for="Product.ReleaseDate">
            </div>
            <div class="form-group">
                <label for="inputAddress2">Description</label>
            <textarea type="text" class="form-control" placeholder="Description" asp-for="Product.Description"></textarea>
            </div>
            <div class="category-select-container">
                <select style="font-size: 20px; height: 50px;" class="btn btn-primary" asp-for="Product.CategoryID"
                    asp-items="@(new SelectList(Model.Categories, nameof(Category.Id), nameof(Category.Name)))">
                    <option>Select a Category</option>
                </select>
            </div>
            <div class="create-button-container">
                <button type="submit" class="btn btn-success create-button" style="font-size: 24px;">Add Product</button>
            </div>
        </form>
    </div>
