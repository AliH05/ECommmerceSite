@model IEnumerable<Product>
@{
    Layout = null;
}

<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" />

<table class="table table-striped table-dark">
    <tr>
        <th>Name</th>
        <th>Company</th>
        <th>Category</th>
        <th>Stock</th>
        <th>Price</th>
        <th>Image</th>
        <th>Release Date</th>
        <th>Average Rating</th>
        <th>Archived</th>
        <th>Description</th>
        <th>Company ID</th>
    </tr>

    @foreach (var product in @Model)
    {
        <tr>
            <td>@product.Name</td>
            <td>@product.Company.Name</td>
            <td>@product.Category.Name</td>
            <td>@product.Stock</td>
            <td>@product.Price</td>
            <td> <img style="width: 200px;" src="@product.Image"> </td>
            <td>@product.ReleaseDate</td>
            <td>@product.AverageRating</td>
            <td>@product.Archived</td>
            <td>@product.Description</td>
            <td>@product.CompanyID</td>
            <td><a href="@Url.Action("Update", "Product", new {productId = @product.ID})" class="btn btn-primary"> Update </a></td>
            <td><a href="@Url.Action("Delete", "Product", new {productId = @product.ID})" class="btn btn-danger"> Delete </a></td>
        </tr>
    }

</table>